<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Context name for the application -->
    <contextName>EXPENSE_MANAGEMENT_SYSTEM</contextName>

    <!-- Console Appender -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Pattern for console output -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %green([%thread]) %cyan(%logger{35}) - %msg%n</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- Loggers for different packages and their levels -->
    <logger name="com.kmihiranga.expensive_management_mcp_server" level="INFO" />
    <logger name="org.springframework" level="INFO" />
    <logger name="org.hibernate" level="INFO" />
    <logger name="ch.qos.logback" level="WARN" />

    <!-- Root logger definition -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
